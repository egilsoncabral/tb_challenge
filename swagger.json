{
  "openapi": "3.0.0",
  "info": {
    "title": "Bus GPS API",
    "description": "Optional multiline or single-line description in [CommonMark](http://commonmark.org/help/) or HTML.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Main server"
    }
  ],
  "paths": {
    "/operators": {
      "get": {
        "summary": "Returns a list of running operators.",
        "parameters": [
          {
            "name": "start-time",
            "in": "header",
            "required": true,
            "description": "Start time (2012-12-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2012-12-31"
            }
          },
          {
            "name": "end-time",
            "in": "header",
            "required": true,
            "description": "End time (2013-01-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2013-01-31"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of operators.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "operator": {
                        "type": "string",
                        "example": "RD"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error."
          },
          "404": {
            "description": "Server offline."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/vehicles": {
      "get": {
        "summary": "Returns a list of vehicles.",
        "parameters": [
          {
            "name": "start-time",
            "in": "header",
            "required": true,
            "description": "Start time (2012-12-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2012-12-31"
            }
          },
          {
            "name": "end-time",
            "in": "header",
            "required": true,
            "description": "End time (2013-01-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2013-01-31"
            }
          },
          {
            "name": "operator",
            "in": "header",
            "required": true,
            "description": "An operator",
            "schema": {
              "type": "string",
              "example": "RD"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of vehicles ids.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "vehicleId": {
                        "type": "string",
                        "example": "345241"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error."
          },
          "404": {
            "description": "Server offline."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/vehiclesAtStop": {
      "get": {
        "summary": "Return which vehicles are at a stop.",
        "parameters": [
          {
            "name": "start-time",
            "in": "header",
            "required": true,
            "description": "Start time (2012-12-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2012-12-31"
            }
          },
          {
            "name": "end-time",
            "in": "header",
            "required": true,
            "description": "End time (2013-01-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2013-01-31"
            }
          },
          {
            "name": "fleet",
            "in": "header",
            "required": true,
            "description": "A fleet",
            "schema": {
              "type": "string",
              "example": "RD"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of vehicles at a Stop.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "vehicleId": {
                        "type": "string",
                        "example": "345241"
                      },
                      "atStop": {
                        "type": "boolean",
                        "example": true
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error."
          },
          "404": {
            "description": "Server offline."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/vehicleTrace": {
      "get": {
        "summary": "Return the trace of that vehicle (GPS entries, ordered by timestamp)",
        "parameters": [
          {
            "name": "start-time",
            "in": "header",
            "required": true,
            "description": "Start time (2012-12-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2012-12-31"
            }
          },
          {
            "name": "end-time",
            "in": "header",
            "required": true,
            "description": "End time (2013-01-31).",
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
              "example": "2013-01-31"
            }
          },
          {
            "name": "vehicleId",
            "in": "header",
            "required": true,
            "description": "A vehicle id",
            "schema": {
              "type": "string",
              "example": "1231232"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The trace of that vehicle",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "vehicleId": {
                      "type": "string",
                      "example": "345241"
                    },
                    "longitude": {
                      "type": "string",
                      "example": "-6.257359"
                    },
                    "latitude": {
                      "type": "string",
                      "example": "53.373501"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error."
          },
          "404": {
            "description": "Server offline."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  }
}